<Component
    xmlns="http://schema.reactant.tech/ui"
    xmlns:layout="http://schema.reactant.tech/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schema.reactant.tech/ui http://schema.reactant.tech/ui.xsd
                        http://schema.reactant.tech/layout http://schema.reactant.tech/layout.xsd"
    type="UserCell">

    <styles name="ReactantStyles">
        <LabelStyle name="email" textColor="black" font=":light@14"/>
        <LabelStyle name="properties" textColor="black" font=":regular@12" numberOfLines="0"/>
    </styles>

    <Label
        field="email"
        style="email"
        layout:top="super inset(4)"
        layout:leading="super inset(20)"
        layout:trailing="super inset(12)"/>

    <Label
        field="properties"
        style="properties"
        layout:below="email offset(4)"
        layout:fillHorizontally="email"
        layout:leading="email"/>
</Component>
